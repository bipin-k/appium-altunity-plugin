{
    "include": ["src/**/*", "test/**/*"],
    "compilerOptions": {
        "outDir": "build",
        "strict": true,
        "inlineSourceMap": true,
        "allowJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "target": "ES2020",
        "types": ["mocha", "expect", "node", "webdriverio/async"]
    },
    "watchOptions": {
        "excludeDirectories": ["**/node_modules", "build"]
    }
}
