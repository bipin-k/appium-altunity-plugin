{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "build",
        "strict": true,
        "inlineSourceMap": true,
        "allowJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "target": "ES2015"
    },
    "watchOptions": {
        "excludeDirectories": ["**/node_modules", "build"]
    }
}
